<h1><%= link_to "Write new article", new_article_path %></h1>

<% @articles.each do |article| %>
  <ul>
    <li>
      <h2>
        <%= link_to article.title, article_path(article) %>
      </h2>
      <p><%= article.content %></p>
      <h3><%= link_to "Delete this shit", article_path(article),
          method: :delete,
          data: { confirm: "Are you sure?" }  %>
      </h3>
    </li>
  </ul>
<% end  %>
